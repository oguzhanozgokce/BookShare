<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardBackgroundColor="@color/card_background_accent"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Book Image -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="52dp"
            android:layout_height="68dp"
            android:layout_marginEnd="16dp"
            app:cardBackgroundColor="@color/genre_education_bg"
            app:cardCornerRadius="8dp"
            app:cardElevation="1dp">

            <ImageView
                android:id="@+id/imageBook"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="8dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_book_24"
                app:tint="@color/primary" />

        </com.google.android.material.card.MaterialCardView>

        <!-- Book Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Book Title -->
            <TextView
                android:id="@+id/textBookTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/oguz_dark_gray"
                android:textSize="15sp"
                android:textStyle="bold"
                tools:text="Kitap Başlığı" />

            <!-- Transaction Date -->
            <TextView
                android:id="@+id/textTransactionDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:textColor="@color/text_secondary"
                android:textSize="13sp"
                tools:text="15 Ocak 2024" />

            <!-- Price or Duration -->
            <TextView
                android:id="@+id/textPriceOrDuration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textColor="@color/oguz_dark_yellow"
                android:textSize="13sp"
                android:textStyle="bold"
                tools:text="150 ₺" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
